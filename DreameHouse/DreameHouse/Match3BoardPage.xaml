<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DreameHouse.Match3BoardPage"
             BackgroundColor="Beige">

    <AbsoluteLayout>

        <ScrollView Orientation="Both"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Padding="10" Spacing="10" VerticalOptions="CenterAndExpand">
                <Grid x:Name="GameGrid"
                      Padding="10"
                      RowSpacing="0"
                      ColumnSpacing="0"
                      VerticalOptions="Center"
                      HorizontalOptions="Center"
                      WidthRequest="500"
                      HeightRequest="500"/>
            </VerticalStackLayout>
        </ScrollView>

        <Frame
               AbsoluteLayout.LayoutFlags="PositionProportional"
               Padding="10"
               BackgroundColor="#AA000000">
            <VerticalStackLayout Spacing="10">

                <Grid ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="steps.png"
                           HeightRequest="40"
                           WidthRequest="40"
                           VerticalOptions="Center"/>
                    <Label x:Name="MovesLabel"
                           Grid.Column="1"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </Grid>

                <Grid ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="goal.png"
                           HeightRequest="40"
                           WidthRequest="40"
                           VerticalOptions="Center"/>
                    <Label x:Name="GoalCountLabel"
                           Grid.Column="1"
                           FontSize="18"
                           TextColor="White"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Image x:Name="GoalTypeImage"
                           Grid.Column="2"
                           HeightRequest="40"
                           WidthRequest="40"
                           VerticalOptions="Center"/>
                </Grid>

            </VerticalStackLayout>
        </Frame>

    </AbsoluteLayout>
</ContentPage>
